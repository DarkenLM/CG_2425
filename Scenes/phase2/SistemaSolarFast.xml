<world>
    <window width="1024" height="768" />
    <camera> 
        <position x="0" y="400" z="1700" />
        <lookAt x="0" y="0" z="0" />
        <up x="0" y="1" z="0" />
        <projection fov="60" near="1" far="5000" />
    </camera>

    <group>
        <!-- Sun -->
        <group>
            <transform>
                <rotate time="25" x="0" y="1" z="0" />
