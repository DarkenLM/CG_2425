                </transform>
                <models><model file="planet.3d" /></models>
            </group>
        </group>

        <!-- Comet (slow path) -->
        <group>
            <transform>
                <translate time="90" align="true">
                    <point x="-300" y="400" z="500" />
                    <point x="0" y="200" z="0" />
                    <point x="300" y="0" z="-500" />
                    <point x="0" y="-300" z="0" />
                    <point x="-300" y="400" z="500" />
                </translate>
                <rotate angle="-90" x="1" y="0" z="0" />
                <scale x="1.05" y="1.05" z="1.05" />
            </transform>
            <models><model file="comet.3d" /></models>
        </group>

        <!-- Teapot in space -->
        <group>
            <transform>
                <translate x="0" y="150" z="0" />
                <rotate angle="-90" x="1" y="0" z="0" />
                <scale x="1" y="1" z="1" />
            </transform>
            <models><model file="bezier_10.3d" /></models>
